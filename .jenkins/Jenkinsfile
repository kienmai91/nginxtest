pipeline {
  agent none
  parameters { string(name: 'ENV', defaultValue: 'dev', description: '') 
}
  stages {
    stage('Nginx Image') {
      agent {
        docker {
          image 'nginx'
        }
      }
      steps {
        echo "${env.BUILD_ID}"
	echo "${params.ENV}"
        echo "${BRANCH_NAME}"
      }
    }
    stage('Build Image') {
      agent any
      steps {
      sh 'docker build -t kienapp-${params.ENV}-${BRANCH_NAME}:${env.BUILD_ID}'
	    }
}
}
}
